<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - L02P02_2021_CC_650_2021_YD_650</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/L02P02_2021_CC_650_2021_YD_650.styles.css" asp-append-version="true" />
    <style>
        nav {
            background-color: #111;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

            nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            nav li {
                display: inline-block;
                margin: 0 10px;
            }

            nav a {
                color: #fff;
                text-decoration: none;
                font-family: sans-serif;
                font-size: 16px;
            }

        .book-sale {
            text-align: center;
            margin: 20px auto;
            max-width: 800px;
        }

            .book-sale img {
                width: 100%;
                height: auto;
            }

            .book-sale h2 {
                font-size: 24px;
                margin-top: 20px;
            }

            .book-sale p {
                font-size: 16px;
                margin-bottom: 10px;
            }

            .book-sale a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                font-size: 16px;
            }



    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-blue">
            <div class="book-sale">
                <img src="@Url.Content("https://upload.wikimedia.org/wikipedia/commons/8/8e/UNICAES_Logo.png")" alt="UNICAES Logo" class="resized-image">

                <h2>¡Venta de libros!</h2>
            </div>
        </nav>

        <style>
            .resized-image {
                max-width: 100px; /* Adjust the width as needed */
                height: auto; /* Maintains aspect ratio */
            }
        </style>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>2021-CC-650 - Jose Luis Calderon Cortez</p>
        <p>2021-YD-650 - Carlos Antonio Yanez Delgado</p>
        <p>2019-GR- - Andy William Guvara Roldan </p>
    </footer>
    <style>
        /* Estilos para el footer */
        footer {
            background-color: #111; /* Azul oscuro */
            color: white; /* Texto blanco */
            text-align: center; /* Centrar texto */
            padding: 20px 0; /* Espaciado interno */
            position: fixed; /* Fijar en la parte inferior */
            width: 100%; /* Ancho completo */
            bottom: 0; /* Colocar en la parte inferior */
        }

            footer p {
                margin: 0; /* Eliminar margen para alinear */
            }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
